<form method="post" action="{{ path('app_admin_brand_delete', {'slug': brand.slug}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer la marque : {{ brand.name }} ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.slug) }}">
    <button class="btn">Supprimer</button>
</form>
