<form method="post" action="{{ path('app_admin_user_delete', {'slug': user.slug}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer l\'utilisateur : {{ user.username }} ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.slug) }}">
    <button class="btn">Delete</button>
</form>
