{% extends 'back/base.html.twig' %}

{% block title %}
    {{ user.username }}
{% endblock %}

{% block body %}
    <h1>{{ user.username }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.lastName }}</td>
        </tr>
        <tr>
            <th>Date de naissance</th>
            <td>{{ user.birthAt | date('d/m/Y') }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">Retour à la liste</a>

    <a href="{{ path('app_admin_user_edit', {'slug': user.slug}) }}">Modifier</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
